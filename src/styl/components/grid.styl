// сетка
.container
  max-width 1024
  margin 0 auto
  padding 0 36px
  display flex
  flex-flow column

.l-row
  flex 1 1 auto
  display flex
  flex-flow row
  @media all and (max-width 480px)
    flex-flow column
    
.l-col-1-1
  flex 1 1 auto

.l-col-1-4
  flex 4 1 240px
  
.l-col-2-4, .l-col-1-2
  flex 2 1 320px

.l-col-3-4
  flex 3 1 600px

.l-col-5-8
  flex 5 1 760px

.l-col-3-8
  flex 3 1 180px
  @media all and (max-width 360px)
    flex 0 0

.l-col-2-8
  flex 2 1 120px

.l-col-1-8
  flex 1 1 60px 
