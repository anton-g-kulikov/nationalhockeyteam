// ресет, нормалайз
@import '../../node_modules/stylus-normalize/normalize'

// основные стили
*
 margin 0
 box-sizing border-box

body
	background-color #f3f3f3

// модули, марджины, паддинги, сетка
@import 'components/modules.styl'
@import 'components/grid.styl'


// типографика
header-font = 'PT Sans', sans-serif
header-weight = 700

text-font = 'PT Sans', sans-serif
text-weight = 400

text-size = 20px
text-lineheight = 32px

a
	font text-size/text-lineheight
	color #2364AA
	&:hover
		color red
	&:visited
	  color desaturate(#2364AA, 60%)
	  &:hover
	    color red
	&.white
		color #f1efea
		font text-weight text-size*0.6/text-lineheight*0.6 header-font

a.item
	text-decoration none

h1
	text-align center
	font header-weight text-size*3/text-lineheight*3 header-font
	@media all and (max-width 600px)
		font header-weight text-size*1.2/text-lineheight header-font
	@media all and (max-width 360px)
		font header-weight text-size*1.2/text-lineheight header-font

h2
	font header-weight text-size*1.1/text-lineheight header-font

h3
	font header-weight text-size*0.7/text-lineheight*0.7 header-font
	text-transform uppercase
	letter-spacing 2px

p
	color #333
	font text-weight text-size/text-lineheight text-font

.note
	display inline
	color lighten(#333, 20%)
	font text-weight text-size*0.6/text-lineheight*0.73 header-font
		
.lead
	font italic text-weight text-size*1.2/text-lineheight*1.2 text-font
	font-weight text-weight
	font-style italic
	@media all and (max-width 360px)
		font italic text-size/text-lineheight text-font

.small
	// color #666
	font text-weight text-size*0.6/text-lineheight header-font

ul, ol
	color #333
	font text-weight text-size/text-lineheight text-font
	margin 0
		

// вспомогательные блоки

.cover
	height 100%;
	display flex
	flex-direction column
	justify-content center
	align-items center
	padding 0 24px
	background-size cover
	
.footer
	font text-weight text-size*0.7/text-lineheight*0.73 header-font
 
.media-block
	display flex
	flex-direction row
	align-items flex-start
	@media all and (max-width 360px)
		flex-direction column

.media-object
	flex 1 1 auto

.media-text
	flex 1 1 auto

.portrait
	width 80px
	border-radius 40px

hr
	border 0px
	height 1px;
	background rgba(204,204,204,0.5);
	margin 0
	&.bold
		height 3px;
		background rgba(0,0,0,1);

// флаги

.flag-icon-background {
  background-size: contain;
  background-position: 50%;
  background-repeat: no-repeat;
}
.flag-icon {
  background-size: contain;
  background-position: 50%;
  background-repeat: no-repeat;
  position: relative;
  display: inline-block;
  width: 1.33333333em;
  line-height: 1em;
}
.flag-icon:before {
  content: "\00a0";
}

.flag-icon-ru {
  background-image: url(../assets/ru.svg);
}

.flag-icon-cz {
  background-image: url(../assets/cz.svg);
}

.flag-icon-de {
  background-image: url(../assets/de.svg);
}

.flag-icon-no {
