// оформление данных

.game, .date, .match, .score, .defeat, .goals, .player, .time
	display flex
	flex 0 1 auto
	@media all and (max-width 640px)
		flex-direction column
	
.date
	flex 0 1 10%
	font text-weight text-size*0.7/text-lineheight header-font

.match
	flex 0 1 25%
	@media all and (max-width 640px)
		flex-direction row
	align-items baseline
	font text-weight text-size/text-lineheight text-font
	
.score
	flex 0 1 10%
	@media all and (max-width 640px)
		flex-direction row
	font text-weight text-size/text-lineheight text-font
	
.goals
	flex 0 1 55%
	flex-direction row
	-webkit-flex-wrap wrap
	-ms-flex-wrap wrap
	flex-wrap wrap
	font text-weight text-size*0.8/text-lineheight header-font
	align-items baseline

.time
	padding-right 4px

.time
	font text-weight text-size*0.6/text-lineheight header-font

.team
	display flex
	flex 0 1 auto
	@media all and (max-width 640px)
		flex-direction column
	font text-weight text-size*0.8/text-lineheight*0.8 header-font

.roster
	flex 1 1 25%
	padding-right 24px

// цвета
.highlight-blue
	background-color #0039A6
	color #fff

.highlight-red
	background-color #D52B1E
	color #fff

.victory
	color green
	
.defeat
	color red

.gold
	background-color #ffd23f

.silver
	color #ddd

.bronze
	color #f6ba80
	

// menu-styles

.js-menu-fixed
	position fixed
	bottom 0px
	width 960px
	@media all and (max-width 1000px)
		width 90%
		left 20px
	background-color #fff
	
.years-list
	list-style none
	margin-left -40px
	display flex
	flex-direction row
	justify-content space-between
	flex-wrap wrap
	@media all and (max-width 480px)
		justify-content flex-start
	li
		a
			color #000
			text-decoration none
			&:hover
				color red
		@media all and (max-width 480px)
			margin-right 20px