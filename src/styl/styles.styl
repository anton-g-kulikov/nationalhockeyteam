}

.flag-icon-se {
  background-image: url(../assets/se.svg);
}

.flag-icon-si {
  background-image: url(../assets/si.svg);
}

.flag-icon-sk {
  background-image: url(../assets/sk.svg);
}

.flag-icon-us {
  background-image: url(../assets/us.svg);
